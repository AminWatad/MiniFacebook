<header class="navbar navbar-fixed-top" 
        style="background-color: #2B51C3;">
<div class="container">
  <%= link_to "Notebook", authenticated_root_path, id: "logo" %>
  <% if user_signed_in? %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to "Explore", explore_index_path, class:"btn" %>
      </li>

      <li>
        <%= link_to "Home",  authenticated_root_path, class:"btn"  %>
      </li>

      <li>
        <%= link_to profile_path(current_user), class: "btn btn-circle btn-lg" do %>
          <span>
            <%= image_tag(current_user.image, alt:"avatar",
                         class: "img") %>
                
          </span>
        <% end %>
      </li>

      <li>
        <%= link_to "Sign out", destroy_user_session_path, class:"btn",
                                method: :delete %>
      </li>

    </ul>

  </nav>
<% end %>
</div>
</header>
